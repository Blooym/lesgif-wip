{
  "lexicon": 1,
  "id": "net.gifdex.actor.defs",
  "defs": {
    "profileViewSearch": {
      "type": "object",
      "description": "A minimal search representation of an actor's profile with just the core information.",
      "required": ["did"],
      "properties": {
        "did": {
          "type": "string",
          "format": "did"
        },
        "handle": {
          "type": "string",
          "format": "handle"
        },
        "displayName": {
          "type": "string",
          "maxGraphemes": 64
        },
        "avatar": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "profileViewBasic": {
      "type": "object",
      "description": "A basic representation of an actor's profile with essential information.",
      "required": ["did"],
      "properties": {
        "did": {
          "type": "string",
          "format": "did"
        },
        "handle": {
          "type": "string",
          "format": "handle"
        },
        "displayName": {
          "type": "string",
          "maxGraphemes": 64
        },
        "avatar": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "profileView": {
      "type": "object",
      "description": "A full representation of an actor's profile.",
      "required": ["did", "postCount"],
      "properties": {
        "did": {
          "type": "string",
          "format": "did"
        },
        "handle": {
          "type": "string",
          "format": "handle"
        },
        "displayName": {
          "type": "string",
          "maxGraphemes": 64
        },
        "pronouns": {
          "type": "string",
          "maxGraphemes": 20
        },
        "avatar": {
          "type": "string",
          "format": "uri"
        },
        "postCount": {
          "type": "integer"
        }
      }
    }
  }
}
